<%= form_for @payment do |f| %>
    <% if @payment.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @payment.errors.full_messages.each do |e| %>
                <li><%= e %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.label :credit_card_number %>
    <%= f.text_field :credit_card_number %>
    <%= f.submit 'Verify!' %>
<% end %>